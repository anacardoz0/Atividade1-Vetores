#include <stdio.h>
#include <stdlib.h>

/*Faça um algoritmo que leia até 30 letras e as escreva na ordem inversa (ou contrária) da que 
foram lidas.
*/

int main(){
 int i;
 char letras[30][2];
 
 
 for(i=0;i<30;i++){
 printf("Informe a letra %d: ",i+1);
 gets(letras[i]);
 }
 
 printf("\n:: Ordem inversa ::\n");
 
 for(i=30;i>=0;i--){
 printf("%s\n",letras[i]);
}

 return 0;
}
