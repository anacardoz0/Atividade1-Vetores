#include <stdio.h>

/*                       ----Questão 01----
Faça um programa em C que armazene em um vetor 3 valores, e imprima os valores 
utilizando notação de ponteiro.
*/

int main() {
	
	int vetor[3] = {2, 4, 6};
	
	int *pVetor1 = &vetor[0];
	int *pVetor2 = &vetor[1];
	int *pVetor3 = &vetor[2];
	
	printf("_____________\n");
	printf("%d\n%d\n%d\n",*pVetor1, *pVetor2, *pVetor3);
	printf("_____________");
	
	return 0;
}


