/*                   ----------Questão 01----------
Escreva uma função que receba por parâmetro dois números e retorne o maior deles
*/

#include<stdio.h>

int maior (a, b){
	
	if (a > b){
		return a;
	}
	else {
		return b;
	}

}

int main(){
	
	int a, b, maiornumero;
	
	printf("Forneca o primeiro numero: ");
	scanf("%d", &a);
	
	printf("Forneca o segundo numero: ");
	scanf("%d", &b);
	
	maiornumero = maior(a, b);
	
	printf("\nO maior numero eh %d", maior);
	
	return 0;
}

